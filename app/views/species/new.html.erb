<h1>New Species</h1>

<% if @species.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @species.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </ul>
<% end %>

<form action="/species" method="post">
  <label for="species_name">Name</label>
  <input id="species_name" name="species[name]" type="text">
  <button>Create Species</button>
</form>

<p><a href="/species">Return to species listing</a></p>
