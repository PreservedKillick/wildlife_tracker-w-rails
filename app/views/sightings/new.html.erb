<h1>Have you seen a <%= @sighting.species.name %> lately?</h1>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species/<%= @sighting.species.id %>/sightings" method="post">
  <label for="date">Date Sighted</label>
  <input id="date" name="sighting[date]" type="date">
  <label for="time">Time Sighted</label>
  <input id="time" name="sighting[time]" type="time">
  <label for="notes">Additional Notes (description, sex etc)</label>
  <input id="notes" name="sighting[notes]" type="text">
  <button>Add Sighting</button>
</form>
